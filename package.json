{
  "name": "verses",
  "version": "1.0.0",
  "description": "basic parsers for CH supported formats",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "run": "yarn run dist && yarn run start",
    "lint": "eslint ./src/**/*",
    "lint:fix": "eslint src --fix",
    "publish:dist": "npm run build && cd dist && npm publish"
  },
  "author": "Ahriana <ahrianadev@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "cross-env": "^7.0.3",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "dtslint": "^4.1.0",
    "prettier": "^2.3.1",
    "@types/node": "^15.12.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.28.0",
    "nodemon": "^2.0.7",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.2"
  }
}
